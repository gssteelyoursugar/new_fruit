.popup_mask {
  position: fixed;
  bottom: 0;
  top: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.4);
  -webkit-transition-property: opacity;
  transition-property: opacity;
  -webkit-transition-duration: 0.3s;
          transition-duration: 0.3s;
  opacity: 0;
  z-index: 999;
}
.popup_mask {
  opacity: 1;
}
.popup_content {
  overflow: hidden;
  box-sizing: border-box;
  position: fixed;
  bottom: 16%;
  border-radius: 8px;
  left: 5%;
  right: 0;
  min-height: 400rpx;
  background: #ffffff;
  width: 90%;
  z-index: 999;
}
.popup_content .title {
  text-align: center;
  font-size: 36rpx;
  padding: 34rpx 0 28rpx 0;
  color: #393939;
}
.popup_content .explain_text {
  font-size: 28rpx;
  padding: 0 40rpx 40rpx;
  color: #707070;
  line-height: 48rpx;
}
.popup_content .explain_text .line {
  display: block;
}
.popup_content .explain_text .line .path {
  color: #007aff;
  display: inline-block;
  text-align: center;
}
.popup_content .button {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 34rpx;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  border-top: 1rpx solid #f2f2f2;
}
.popup_content .button view {
  text-align: center;
}
.agree {
  font-size: 32rpx;
  color: #00C52A;
  width: 50%;
}
.disagree {
  color: #b6b6b6;
  font-size: 32rpx;
  width: 50%;
  border-right: 1px solid #f5f5f5;
}

